	<!-- ===================== KnockOutRifle ========================= -->

	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_KnockOut</defName>
		<label>charged knock-out shot</label>
		<graphicData>
			<texPath>Things/Projectile/Charge_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
